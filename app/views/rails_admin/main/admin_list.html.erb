<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
        <div class='col form-group'>
          <h3 class=''>Admin</h3>
          <table class="table table-bordered">
            <thead  class="thead-light">
              <tr>
               <th>Id</th>
                <th>Name</th>
                <th>Role</th>
                <th>Email</th>
             </tr>
            </thead>
            <tbody>
              <% User.all.each do |u| %>
                <% if u.role.to_s == 'admin' %>
                  <tr>
                   <td><%= u.id %></td>
                   <td><%= u.name %></td>
                   <td><%= u.role %></td>
                   <td><%= u.email %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <br>
          </div> 
         
        </div>